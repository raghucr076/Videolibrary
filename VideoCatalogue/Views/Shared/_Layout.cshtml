<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Video Catalogue</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HWVideoCatalogue.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
     
        <nav class="navbar navbar-expand navbar-light bg-light sticky-top">
            <a class="navbar-brand" href="#">Video Catalogue</a>
                   <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Upload">Upload</a>
                    </li>
                    <!-- Add more nav items here if needed -->
                </ul>
           
        </nav>
    </header>
     <main role="main" class="pb-3">
            @RenderBody()
        </main>
   <footer class="border-top footer text-muted">
   </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
